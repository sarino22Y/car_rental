<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/output.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="{{ path('app_admin_cars') }}" class="text-xl font-bold">Car Rental</a>
            <div class="space-x-4">
                {% if app.user %}
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_admin_cars') }}" class="hover:underline">Mes Voitures</a>
                        <a href="{{ path('app_car_new') }}" class="hover:underline">Ajouter Voiture</a>
                    {% elseif is_granted('ROLE_CLIENT') %}
                        <a href="{{ path('app_client_dashboard') }}" class="hover:underline">Tableau de bord</a>
                        <a href="{{ path('app_subscription_index') }}" class="hover:underline">Mes Abonnements</a>
                        <a href="{{ path('app_subscription_new') }}" class="hover:underline">Nouvel Abonnement</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="hover:underline">DÃ©connexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="hover:underline">Connexion</a>
                {% endif %}
            </div>
        </div>
    </nav>
    <main class="container mx-auto px-4 py-6">
        {% block body %}{% endblock %}
    </main>
    {% block javascripts %}{% endblock %}
</body>
</html>