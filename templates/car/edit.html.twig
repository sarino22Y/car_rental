        <h1 class="text-2xl font-bold text-center mb-6">Modifier {{ car.name }}</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(form.name, {'attr': {'class': 'border rounded p-2 w-full'}}) }}
            {{ form_row(form.offer, {'attr': {'class': 'border rounded p-2 w-full'}}) }}
            {{ form_row(form.description, {'attr': {'class': 'border rounded p-2 w-full'}}) }}
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded w-full hover:bg-blue-600">Enregistrer</button>
        {{ form_end(form) }}
        <div class="mt-4 flex space-x-2">
            <a href="{{ path('app_admin_cars') }}" class="text-blue-500 hover:underline">Retour Ã  la liste</a>
