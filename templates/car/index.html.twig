{% extends 'base.html.twig' %}
{% block title %}Mes Voitures{% endblock %}
{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-2xl font-bold text-center my-6">Mes Voitures</h1>
        <div class="flex justify-center space-x-4 mb-6">
            <a href="{{ path('app_car_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Ajouter une voiture</a>
            <a href="{{ path('app_cars_public') }}" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Voir page publique</a>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for car in cars %}
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-xl font-semibold">{{ car.name }}</h2>
                    <p class="text-gray-600">Offre: {{ car.offer|capitalize }}</p>
                    {% if car.description %}
                        <p class="text-gray-500 mt-2">{{ car.description }}</p>
                    {% endif %}
                    <div class="mt-4 flex space-x-2">
                        <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
                        <form method="post" action="{{ path('app_car_delete', {'id': car.id}) }}" onsubmit="return confirm('Confirmer la suppression ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
                            <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}