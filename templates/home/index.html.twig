{% extends 'base.html.twig' %}
{% block title %}Bienvenue - Car Rental{% endblock %}
{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-center my-6">Bienvenue chez Car Rental</h1>
        <p class="text-gray-600 text-center mb-6">Louez des voitures de qualité pour tous vos besoins !</p>
        <div class="flex justify-center space-x-4">
            <a href="{{ path('app_cars_public') }}" class="bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600">Voir les voitures disponibles</a>
            {% if not app.user %}
                <a href="{{ path('app_login') }}" class="bg-gray-500 text-white px-6 py-3 rounded hover:bg-gray-600">Se connecter</a>
            {% endif %}
        </div>
        {% if app.user %}
            <div class="mt-6 text-center">
                {% if is_granted('ROLE_OWNER') %}
                    <a href="{{ path('app_admin_cars') }}" class="text-blue-500 hover:underline">Gérer mes voitures</a>
                {% elseif is_granted('ROLE_CLIENT') %}
                    <a href="{{ path('app_client_dashboard') }}" class="text-blue-500 hover:underline">Mon tableau de bord</a>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}