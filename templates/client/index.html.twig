{% extends 'base.html.twig' %}
{% block title %}Tableau de bord Client{% endblock %}
{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-2xl font-bold text-center my-6">Bienvenue, {{ client.email }}</h1>
        <div class="flex justify-center space-x-4 mb-6">
            <a href="{{ path('app_subscription_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Mes Abonnements</a>
            <a href="{{ path('app_subscription_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Nouvel Abonnement</a>
        </div>
        <h2 class="text-xl font-semibold mb-4">Vos abonnements</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for subscription in subscriptions %}
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h3 class="text-lg font-semibold">{{ subscription.car.name }}</h3>
                    <p class="text-gray-600">Du {{ subscription.startDate|date('d/m/Y') }} au {{ subscription.endDate ? subscription.endDate|date('d/m/Y') : 'En cours' }}</p>
                    <div class="mt-4 flex space-x-2">
                        <a href="{{ path('app_subscription_edit', {'id': subscription.id}) }}" class="text-blue-500 hover:underline">Modifier</a>
                        <form method="post" action="{{ path('app_subscription_delete', {'id': subscription.id}) }}" onsubmit="return confirm('Confirmer la suppression ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subscription.id) }}">
                            <button type="submit" class="text-red-500 hover:underline">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500">Aucun abonnement.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}