{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
    <div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold text-center mb-6">Connexion</h1>
        {% if error %}
            <div class="bg-red-100 text-red-700 p-4 rounded mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-4 text-gray-600">
                Connecté en tant que {{ app.user.userIdentifier }}.
                <a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Déconnexion</a>
            </div>
        {% else %}
            <form method="post" class="space-y-4">
                <div>
                    <label for="inputEmail" class="block text-gray-700">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="border rounded p-2 w-full" autocomplete="email" required autofocus>
                </div>
                <div>
                    <label for="inputPassword" class="block text-gray-700">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="border rounded p-2 w-full" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded w-full hover:bg-blue-600">Se connecter</button>
            </form>
        {% endif %}
    </div>
{% endblock %}